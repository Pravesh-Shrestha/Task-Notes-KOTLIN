<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tasknotesapp">
    <!-- INTENTS AND NAVs ADDED -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icu"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icu"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskNotesApp">

        <activity android:name=".ui.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.LoginActivity" />
        <activity android:name=".ui.activity.RegisterActivity" />
        <activity android:name=".ui.activity.MainActivity" />
        <activity android:name=".ui.activity.AddTaskActivity" />
        <activity android:name=".ui.activity.AddNoteActivity" />
    </application>

</manifest>